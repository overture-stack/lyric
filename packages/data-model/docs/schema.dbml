enum audit_action {
  UPDATE
  DELETE
}

enum submission_status {
  OPEN
  VALID
  INVALID
  CLOSED
  COMMITTED
}

table audit_submitted_data {
  id serial [pk, not null, increment]
  action audit_action [not null]
  dictionary_category_id integer [not null]
  data_diff jsonb
  entity_name varchar [not null]
  last_valid_schema_id integer [not null]
  new_data_is_valid boolean [not null]
  old_data_is_valid boolean [not null]
  organization varchar [not null]
  original_schema_id integer [not null]
  submission_id integer [not null]
  system_id varchar [not null]
  created_at timestamp
  created_by varchar
}

table dictionaries {
  id serial [pk, not null, increment]
  dictionary jsonb [not null]
  name varchar [not null]
  version varchar [not null]
  created_at timestamp [default: `now()`]
  created_by varchar
}

table dictionary_categories {
  id serial [pk, not null, increment]
  active_dictionary_id integer
  name varchar [not null, unique]
  created_at timestamp [default: `now()`]
  created_by varchar
  updated_at timestamp
  updated_by varchar
}

table submissions {
  id serial [pk, not null, increment]
  data jsonb [not null]
  dictionary_category_id integer [not null]
  dictionary_id integer [not null]
  errors jsonb
  organization varchar [not null]
  status submission_status [not null]
  created_at timestamp [default: `now()`]
  created_by varchar
  updated_at timestamp [default: `now()`]
  updated_by varchar
}

table submitted_data {
  id serial [pk, not null, increment]
  data jsonb [not null]
  dictionary_category_id integer [not null]
  entity_name varchar [not null]
  is_valid boolean [not null]
  last_valid_schema_id integer [not null]
  organization varchar [not null]
  original_schema_id integer [not null]
  system_id varchar [not null, unique]
  created_at timestamp [default: `now()`]
  created_by varchar
  updated_at timestamp [default: `now()`]
  updated_by varchar

  indexes {
    organization [name: 'organization_index']
  }
}

