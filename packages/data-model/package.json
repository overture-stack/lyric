		"@types/pg": "^8.11.6",
		"drizzle-dbml-generator": "^0.6.1",
		"drizzle-kit": "^0.20.18",
		"rimraf": "^5.0.9",
		"tsx": "^4.16.2"
	},
	"dependencies": {
		"@overture-stack/lectern-client": "2.0.0-beta.3",
