		"@types/pg": "^8.11.0",
		"drizzle-dbml-generator": "^0.6.1",
		"drizzle-kit": "^0.20.17",
		"rimraf": "^5.0.7",
		"tsx": "^4.7.1"
	},
	"dependencies": {
		"@overturebio-stack/lectern-client": "^1.5.0",
